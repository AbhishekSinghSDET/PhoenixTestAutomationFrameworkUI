<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <!-- Appenders means where do we want to show the logs, here we will show in console-->
    <Appenders>
        <Console name = "Console" target="SYSTEM_OUT">
            <PatternLayout pattern = "%d{yyyy-MM-dd HH:mm:ss} [%t] %level %logger::%M::%L %msg %n"> </PatternLayout>
        </Console>

        <File name = "FileLogger" fileName="logs/automation.log" append="false">
            <PatternLayout pattern = "%d{yyyy-MM-dd HH:mm:ss} [%t] %level %logger %msg %n"> </PatternLayout>
        </File>

    </Appenders>

    <!-- Loggers mean root meaning at what level we need to start logging-->
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console">
            </AppenderRef>
            <AppenderRef ref="FileLogger">
            </AppenderRef>
        </Root>

    </Loggers>

</Configuration>